<view class="container">
  <i class="iconfont icon-sousuo find"></i>
  <input class="bar" placeholder="{{placeholder}}" placeholder-class="in-bar" bindinput="onInput" value="{{inputValue}}"></input>
  <view class="{{showView?'cancel-container':'cancel-container-hide'}}">
    <i class="iconfont icon-quxiao cancel" bind:tap="onCancel"></i>
  </view>
  <button class="search" bind:tap="onSearch">搜索</button>
</view>