/* 搜索 */
.header {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background-color: #fff;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  box-sizing: border-box;
}

.search-container {
  flex: 1;
}

.empty {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 320rpx;
  z-index: 98;
  text-align: center;
}


.empty-img {
  position: absolute;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 360rpx;
  height: 270rpx;
}

.empty-content{
  margin-top: 160rpx;
}

.empty-tip{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 30rpx;
  color: #8d8d8d;
}

.empty-hide{
  display: none;
}

.space{
  margin-top: 100rpx;
}